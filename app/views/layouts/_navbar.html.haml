%nav.navbar.navbar-default
  .container
    .navbar-header
      %a.navbar-brand
        %img{alt: 'Brand', src: 'http://www.freeiconspng.com/uploads/chief-icon-8.png', width: '25'}
      = link_to 'Recipes App', root_path, class: 'navbar-brand'

    .navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li{class: "#{active('/')}"}= link_to "Home", root_path
        - if user_signed_in?
          %li{class: "#{active('/recipes/new')}"}= link_to "New Recipe", new_recipe_path
          %li= link_to "Logout", destroy_user_session_path, method: :delete
        - else
          %li{class: "#{active('/users/sign_in')}"}= link_to "Sign In", new_user_session_path
          %li{class: "#{active('/users/sign_up')}"}= link_to "Sign Up", new_user_registration_path

      %form.navbar-form
        .form-group
          %input.form-control{type:'text', placeholder:"Search" }
          %button.btn.btn-info{ type:'submit' } Search

